<mvc:View
        controllerName="sap.ui.demo.wt.controller.Main"
        xmlns:u="sap.ui.unified"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        class="viewPadding">

    <u:Shell id="myShell">
        <u:headItems>
            <u:ShellHeadItem
                    tooltip="Configuration"
                    icon="sap-icon://menu2"
                    press="handlePressConfiguration"/>
        </u:headItems>
        <u:headEndItems>
            <u:ShellHeadItem
                    image="/Clock-In-Out/logo-blum.png" />
        </u:headEndItems>
        <u:paneContent>
            <core:Icon src="sap-icon://person-placeholder"/>

            <Title text="14105" />

            <Button icon="sap-icon://log" press="onLogout"/>
        </u:paneContent>

    <Panel
            class="sapUiResponsiveMargin"
            width="auto">
        <content>
            <IconTabBar
                    id="idIconTabBarSeparatorNoIcon"
                    expanded="true"
                    expandable="false"
                    class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter
                            text="Clock it">
                        <mvc:XMLView viewName="sap.ui.demo.wt.view.Stamp"/>
                    </IconTabFilter>
                    <IconTabSeparator icon=""/>
                    <IconTabFilter
                            text="Outbox">
                        <mvc:XMLView viewName="sap.ui.demo.wt.view.Outbox"/>
                    </IconTabFilter>

                </items>
            </IconTabBar>

        </content>

    </Panel>


    </u:Shell>

</mvc:View>
