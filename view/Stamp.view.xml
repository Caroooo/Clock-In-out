<mvc:View
        controllerName="sap.ui.demo.wt.controller.Stamp"
        xmlns:l="sap.ui.layout"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">
        <l:VerticalLayout
                class="sapUiContentPadding"
                id="oVerticalContent"
                width="100%">
            <l:content>
                <VBox class="sapUiSmallMargin">

                    <DatePicker id="myDP" value="{path: '/myDate', type:'sap.ui.model.type.Date' }"
                                change="handleChange"
                                class="sapUiSmallMarginBottom"/>

                    <TimePicker
                            id="TP3"
                            valueFormat="HH:mm"
                            displayFormat="HH:mm"
                            change="handleChange"/>


                    <HBox class="sapUISmallMargin">

                        <Button
                                text="{i18n>clockInButtonText}"
                                press="onClockIn"
                                class="blumButton"/>

                        <Button
                                text="{i18n>clockOutButtonText}"
                                press="onClockOut"
                                class="blumButton"
                                />
                    </HBox>
                    <DraftIndicator id="draftIndi"></DraftIndicator>
                </VBox>
            </l:content>
        </l:VerticalLayout>
</mvc:View>