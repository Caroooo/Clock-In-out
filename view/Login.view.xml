<mvc:View
        controllerName="sap.ui.demo.wt.controller.Login"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc">

    <Panel
            class="loginPane"
            width="auto">
        <content>

            <Image
                    src="logo_blumO.png"
                    densityAware="false"
                    width="7rem"
                    />


            <Input
                    id="BAUInput"
                    class="myInput"
                    type="Text"
                    placeholder="{i18n>loginUsernamePlaceholder}"
                    valueStateText="{i18n>loginValueStateText}"
                    value="{
					path : '/number',
					type : 'sap.ui.model.type.String',
					constraints : {
						minLength: 2,
						maxLength: 5
					}
				}"/>


            <Input
                    type="Password"
                    class="myInput"
                    placeholder="{i18n>loginPasswordPlaceholder}"/>


            <Button
                    text="login"
                    press="onLogin"
                    class="logButton"/>

        </content>
    </Panel>

</mvc:View>
