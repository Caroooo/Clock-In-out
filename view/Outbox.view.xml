<mvc:View
        controllerName="sap.ui.demo.wt.controller.Outbox"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        height="100%"
        width="100%">
    <Page
            class="sapUiContentPadding"
            showNavButton="false"
            showHeader="false">
        <PullToRefresh
                id="pullToRefresh"
                refresh="handleRefresh" />
         <List
                    id="outboxList"
                    class="sapUiResponsiveMargin"
                    width="auto"
                    items="{
            path : 'out>/Outbox',
            sorter : {
                path : 'Date',
                group : true,
                descending: true
            }
        }">
                <items>
                    <ObjectListItem
                            title="{out>Time} {out>ClockType}"
                            number="{out>State}"/>
                </items>
            </List>
  </Page>

</mvc:View>