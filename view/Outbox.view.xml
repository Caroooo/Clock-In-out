<mvc:View
        controllerName="sap.ui.demo.wt.controller.Outbox"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m">
    <ScrollContainer
            height="100%"
            width="100%"
            horizontal="false"
            vertical="true"
            focusable="true">

        <List
                id="outboxList"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{
            path : 'out>/Outbox',
            sorter : {
                path : 'Date',
                group : true,
                descending: true
            }
        }">
            <items>
                <ObjectListItem
                        title="{out>Time} {out>ClockType}"
                        number="{out>State}"/>
            </items>
        </List>
    </ScrollContainer>

</mvc:View>