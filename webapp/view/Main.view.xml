<mvc:View
        controllerName="sap.ui.demo.wt.controller.Main"
        xmlns:u="sap.ui.unified"
        xmlns:core="sap.ui.core"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        heigth="100%"
        class="viewPadding">


    <u:Shell id="myShell" icon="logo-blum.png">
        <u:headItems>
            <u:ShellHeadItem
                    tooltip="Configuration"
                    icon="sap-icon://menu2"
                    press="handlePressConfiguration"/>
        </u:headItems>

        <u:paneContent>
            <VBox class="sapUiSmallMargin">
                <HBox class="sapUiSmallMargin" binding="{path: 'credential>/'}">
                    <core:Icon src="sap-icon://person-placeholder" class="iconSize1"/>
                    <Title text="{credential>username}"/>
                </HBox>

                <Button icon="sap-icon://log" press="onLogout" class="logButton"/>
                <Switch name="connection" state="true" change="change">
                    <layoutData>
                        <FlexItemData growFactor="1" />
                    </layoutData>
                </Switch>
            </VBox>
        </u:paneContent>


                <IconTabBar
                        id="idIconTabBarSeparatorNoIcon"
                        expanded="true"
                        expandable="false">
                    <items>
                        <IconTabFilter text="{i18n>clockItMenuText}" icon="sap-icon://create-entry-time" class="iconSize2">
                        <!--<IconTabFilter text="{i18n>clockItMenuText}">-->

                        <mvc:XMLView viewName="sap.ui.demo.wt.view.Stamp"/>
                        </IconTabFilter>
                        <IconTabFilter text="{i18n>OutboxMenuText}" icon="sap-icon://lateness" class="iconSize2">
                        <!--<IconTabFilter text="{i18n>OutboxMenuText}">-->

                        <mvc:XMLView viewName="sap.ui.demo.wt.view.Outbox"/>
                        </IconTabFilter>
                        <IconTabFilter text="{i18n>HistoryMenuText}" icon="sap-icon://complete" class="iconSize2">
                        <!--<IconTabFilter text="{i18n>HistoryMenuText}" >-->
                        <mvc:XMLView viewName="sap.ui.demo.wt.view.History"/>
                        </IconTabFilter>

                    </items>
                </IconTabBar>

    </u:Shell>


</mvc:View>
