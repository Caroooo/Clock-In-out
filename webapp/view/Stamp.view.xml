<mvc:View
        controllerName="sap.ui.demo.wt.controller.Stamp"
        xmlns:l="sap.ui.layout"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        class="swipe-page">
    <l:VerticalLayout
            class="sapUiContentPadding"
            id="oVerticalContent"
            width="100%">
        <l:content>
            <VBox class="sapUiSmallMargin">
                <FlexBox
                        height="60px"
                        alignItems="Center"
                        justifyContent="Center">
                    <Title class="currentDate"
                           text="{path: '/myDate', type:'sap.ui.model.type.Date', formatOptions:{style: 'full'} }"/>
                </FlexBox>
                <FlexBox
                        height="60px"
                        alignItems="Center"
                        justifyContent="Center">
                    <Title class="currentTime" text="{path: '/myDate', type:'sap.ui.model.type.Time'}"/>
                </FlexBox>
                <FlexBox
                        height="100px"
                        alignItems="End"
                        justifyContent="Center">
                    <items>
                        <Button
                                text="{i18n>clockInButtonText}"
                                press="onClockIn"
                                class="sapUiSmallMarginEnd"/>
                        <Button
                                text="{i18n>clockOutButtonText}"
                                press="onClockOut"
                                class="sapUiSmallMarginEnd"
                                />
                    </items>
                </FlexBox>
            </VBox>
        </l:content>
    </l:VerticalLayout>
</mvc:View>