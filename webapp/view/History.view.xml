<mvc:View
        controllerName="sap.ui.demo.wt.controller.History"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        height="100%"
        width="100%">
    <Page
            class="sapUiContentPadding"
            showNavButton="false"
            showHeader="false">


        <PullToRefresh
                id="pullToRefresh"
                refresh="handleRefresh"/>

        <Table items="{path: 'history>/', sorter: {path : 'history>Date', formatter: '.formatDate', group: true}}">
            <columns>
                <Column width="40%"></Column>
                <Column width="40%"> </Column>
                <Column hAlign="Right"></Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{path: 'history>Date', type:'sap.ui.model.type.Date' ,formatOptions:{pattern:'dd.MM.yyyy', source:{pattern:'yyyyMMdd'}}}"/>
                        <Text text="{path: 'history>Time', type:'sap.ui.model.type.Date' ,formatOptions:{pattern:'HH:mm', source:{pattern:'HHmmSS'}}}"/>
                        <Text text="{path: 'history>ClockType', formatter: '.formatClockType'}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>


    </Page>

</mvc:View>